<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.ballersmeet.sruti.ballersmeet.control.ProfileActivity">

    <ImageView

        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ballerz_meet"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Ballerz Meet"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="User: "
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center|right"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/userTV"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="230dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Skill Level: "
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center|right"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/skillTV"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="#999999">
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:id="@+id/profileBT"
            android:onClick="handleProfileClicked"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Find Game"
            android:onClick="handleFindClicked"
            android:id="@+id/findGameBT" />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Start Game"
            android:id="@+id/startGameBT"
            android:onClick="handleStartClicked"/>

    </LinearLayout>
</LinearLayout>
