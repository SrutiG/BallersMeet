<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.ballersmeet.sruti.ballersmeet.control.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop = "true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ballerz_meet"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="handleImageClicked"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Ballerz Meet"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/ballerz"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/selection"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="140dp"
        android:padding="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="User: "
                android:gravity="center|right"
                android:textSize="20sp" />
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Sruti7"
                android:id="@+id/userTV"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Skill Level: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center|right"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="7 probably"
                android:textSize="20sp"
                android:id="@+id/skillTV"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="#999999">
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:id="@+id/profileBT"
            android:onClick="handleProfileClicked"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Find Game"
            android:onClick="handleFindClicked"
            android:id="@+id/findGameBT" />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Create Game"
            android:id="@+id/startGameBT"
            android:onClick="handleStartClicked"/>

    </LinearLayout>
</RelativeLayout>
