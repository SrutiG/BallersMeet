<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".control.HomeScreenFragment"
    android:weightSum="1">

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
            >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/nav"
        android:elevation="3dp">
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/homeBT"
                android:onClick="handleHomeClicked"
                android:background="@color/nav"
                android:src="@drawable/ic_home"
                android:scaleType="fitCenter"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/searchBT"
                android:onClick="handleSearchClicked"
                android:background="@color/nav"
                android:src="@drawable/ic_search"
                android:scaleType="fitCenter"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/createBT"
                android:onClick="handleCreateClicked"
                android:background="@color/nav"
                android:src="@drawable/ic_create"
                android:scaleType="fitCenter"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/profileBT"
                android:onClick="handleProfileClicked"
                android:background="@color/nav"
                android:src="@drawable/ic_profile"
                android:scaleType="fitCenter"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
