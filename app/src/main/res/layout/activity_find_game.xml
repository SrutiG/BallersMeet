<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_game"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ballersmeet.sruti.ballersmeet.control.FindGame">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/timePicker"
                android:layout_centerHorizontal="true"
                android:id="@+id/datePicker"
                android:layout_margin="20dp" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/datePicker"
                android:layout_alignStart="@+id/datePicker"
                android:id="@+id/timePicker"
                android:layout_margin="20dp" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="#999999">
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:id="@+id/profileBT" />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Find Game"
            android:onClick="handleFindClicked"
            android:id="@+id/findGameBT" />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Start Game"
            android:id="@+id/startGameBT" />

    </LinearLayout>
</RelativeLayout>
